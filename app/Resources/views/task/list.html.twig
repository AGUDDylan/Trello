{% extends "::base.html.twig" %}

{%  block title 'Trello' %}

{%  block header  %}
    <h1>Vos t√¢ches</h1>
{% endblock %}

{% block content %}
    {% for category in categories %}
        <div class="col-lg-3">
            <h2> {{  category.name }} <span class="badge"> {{  category.tasks | length }}</span></h2>
            {% for  task in category.tasks %}
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3> {{ task.name }}</h3>
                    <p> {{  task.description }} </p>
                    <p> <b> Statut : </b> {{ task.status }}</p>
                    <a href={{  path('app_task_update') }}><span class = "glyphicon glyphicon-pencil" ></span>  </a>
                </div>
            </div>


            {% endfor %}
        </div>
    {% endfor %}

{% endblock %}





